{
  // ğŸƒ Spring Boot Development Container
  "name": "ğŸƒ Spring Boot + â˜• Java 21",
  "image": "mcr.microsoft.com/devcontainers/java:21",

  // ğŸ§© Features
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installGradle": true,
      "installMaven": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // ğŸ¨ VS Code Customizations
  "customizations": {
    "vscode": {
      "extensions": [
        // â˜• Java Core
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        
        // ğŸƒ Spring Boot
        "vmware.vscode-spring-boot",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-spring-boot-dashboard",
        
        // ğŸ› ï¸ Build Tools
        "vscjava.vscode-gradle",
        "vscjava.vscode-maven",
        
        // ğŸ¤– AI & Productivity
        "github.copilot",
        "github.copilot-chat",
        
        // ğŸ“¦ Utilities
        "humao.rest-client",
        "rangav.vscode-thunder-client",
        "redhat.vscode-yaml"
      ],
      "settings": {
        // â˜• Java Settings
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "java.autobuild.enabled": true,
        
        // ğŸƒ Spring Boot Settings
        "spring-boot.ls.java.home": "/usr/lib/jvm/msopenjdk-current",
        "boot-java.rewrite.reconcile": true,
        
        // ğŸ¨ Editor Settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        
        // ğŸ“ Files
        "files.exclude": {
          "**/.classpath": true,
          "**/.project": true,
          "**/.settings": true,
          "**/.factorypath": true
        }
      }
    }
  },

  // ğŸŒ Ports
  "forwardPorts": [8080, 8081, 5005],
  "portsAttributes": {
    "8080": { "label": "ğŸƒ Spring Boot App", "onAutoForward": "notify" },
    "8081": { "label": "ğŸ“Š Actuator/Management", "onAutoForward": "silent" },
    "5005": { "label": "ğŸ› Debug Port", "onAutoForward": "silent" }
  },

  // ğŸ”§ Environment Variables
  "containerEnv": {
    "SPRING_PROFILES_ACTIVE": "dev",
    "JAVA_TOOL_OPTIONS": "-Xmx2g"
  },

  // ğŸš€ Post Create Command
  "postCreateCommand": "echo 'ğŸƒ Spring Boot environment ready!' && java -version && ./gradlew --version 2>/dev/null || mvn --version 2>/dev/null || true",

  // ğŸ‘¤ User
  "remoteUser": "vscode"
}